# ===================================
# HACKNECT ENVIRONMENT CONFIGURATION
# ===================================

# Copy this file to .env and fill in your values
# DO NOT commit .env file to version control

# ===== DATABASE CONFIGURATION =====

# PostgreSQL
DATABASE_URL=postgresql://hacknect:hackn3ct_dev_2026@localhost:5432/hacknect_db
POSTGRES_USER=hacknect
POSTGRES_PASSWORD=hackn3ct_dev_2026
POSTGRES_DB=hacknect_db

# MongoDB
MONGODB_URI=mongodb://hacknect:hackn3ct_dev_2026@localhost:27017/hacknect?authSource=admin
MONGO_INITDB_ROOT_USERNAME=hacknect
MONGO_INITDB_ROOT_PASSWORD=hackn3ct_dev_2026

# Redis
REDIS_URL=redis://:hackn3ct_dev_2026@localhost:6379
REDIS_PASSWORD=hackn3ct_dev_2026

# ===== MESSAGE QUEUE =====

RABBITMQ_URL=amqp://hacknect:hackn3ct_dev_2026@localhost:5672/hacknect
RABBITMQ_DEFAULT_USER=hacknect
RABBITMQ_DEFAULT_PASS=hackn3ct_dev_2026
RABBITMQ_DEFAULT_VHOST=hacknect

# ===== FIREBASE CONFIGURATION =====

# Frontend Firebase Config (from Firebase Console -> Project Settings)
FIREBASE_API_KEY=AIzaSyD...
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# Backend Firebase Admin SDK (from Firebase Console -> Service Accounts)
# Generate private key and paste the values here
FIREBASE_ADMIN_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase Cloud Messaging (for push notifications)
FIREBASE_SERVER_KEY=AAAA...

# ===== AI / ML SERVICES =====

# OpenAI API (for embeddings and GPT)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Pinecone Vector Database
# Get from: https://www.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=hacknect-embeddings

# Alternative: Sentence Transformers (local, no API key needed)
USE_LOCAL_EMBEDDINGS=false
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===== EMAIL SERVICE =====

# SendGrid (recommended)
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your-api-key

# OR AWS SES
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1

# Email settings
FROM_EMAIL=noreply@hacknect.com
SUPPORT_EMAIL=support@hacknect.com
ADMIN_EMAIL=admin@hacknect.com

# ===== PAYMENT / PREMIUM FEATURES =====

# Stripe (for premium subscriptions)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Premium tier pricing IDs (from Stripe)
STRIPE_BASIC_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID=price_...
STRIPE_ENTERPRISE_PRICE_ID=price_...

# ===== AUTHENTICATION =====

# JWT Secret (generate a strong random string)
# Generate with: openssl rand -base64 64
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# Session
SESSION_SECRET=your_session_secret_key

# ===== SERVICE PORTS =====

# Backend Services
USER_SERVICE_PORT=3001
TEAM_SERVICE_PORT=3002
MATCHMAKING_SERVICE_PORT=3003
EVENT_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005
REQUEST_SERVICE_PORT=3006
CHAT_SERVICE_PORT=3007
ANALYTICS_SERVICE_PORT=3008
REVERSE_SERVICE_PORT=3009

# Gateway & Frontend
GATEWAY_PORT=8080
FRONTEND_PORT=3000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ===== SERVICE URLS (for inter-service communication) =====

USER_SERVICE_URL=http://localhost:3001
TEAM_SERVICE_URL=http://localhost:3002
MATCHMAKING_SERVICE_URL=http://localhost:3003
EVENT_SERVICE_URL=http://localhost:3004
NOTIFICATION_SERVICE_URL=http://localhost:3005
REQUEST_SERVICE_URL=http://localhost:3006
CHAT_SERVICE_URL=http://localhost:3007
ANALYTICS_SERVICE_URL=http://localhost:3008
REVERSE_SERVICE_URL=http://localhost:3009

# ===== FRONTEND CONFIGURATION =====

REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_WS_URL=ws://localhost:8080
REACT_APP_ENVIRONMENT=development

# Firebase (frontend)
REACT_APP_FIREBASE_API_KEY=$FIREBASE_API_KEY
REACT_APP_FIREBASE_AUTH_DOMAIN=$FIREBASE_AUTH_DOMAIN
REACT_APP_FIREBASE_PROJECT_ID=$FIREBASE_PROJECT_ID
REACT_APP_FIREBASE_STORAGE_BUCKET=$FIREBASE_STORAGE_BUCKET
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=$FIREBASE_MESSAGING_SENDER_ID
REACT_APP_FIREBASE_APP_ID=$FIREBASE_APP_ID

# ===== RATE LIMITING =====

RATE_LIMIT_WINDOW_MS=60000  # 1 minute
RATE_LIMIT_MAX_REQUESTS=100 # 100 requests per minute
RATE_LIMIT_ENABLED=true

# ===== CORS =====

CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# ===== FILE UPLOAD =====

MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===== LOGGING =====

LOG_LEVEL=debug  # error, warn, info, http, verbose, debug, silly
LOG_FORMAT=json  # json, simple

# ===== MONITORING & ANALYTICS =====

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ===== FEATURE FLAGS =====

ENABLE_PREMIUM_FEATURES=true
ENABLE_MENTOR_RADAR=true
ENABLE_SKILL_GAPS_HEATMAP=true
ENABLE_REVERSE_HACKATHON=true
ENABLE_STARTUP_INTEGRATION=false  # Set to true when ready

# ===== CRON JOBS & BACKGROUND TASKS =====

# Mentor Radar check frequency (minutes)
MENTOR_RADAR_INTERVAL=60

# Match recalculation frequency (minutes)
MATCH_RECALCULATION_INTERVAL=30

# Event deadline reminder (hours before)
DEADLINE_REMINDER_HOURS=24,1

# Request expiration (days)
REQUEST_EXPIRATION_DAYS=7

# ===== THIRD-PARTY INTEGRATIONS =====

# GitHub (for OAuth and repository integration)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google (for OAuth)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LinkedIn (for recruiter verification)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ===== CACHE CONFIGURATION =====

CACHE_TTL=3600  # 1 hour in seconds
CACHE_ENABLED=true

# ===== TESTING =====

# Test Database
TEST_DATABASE_URL=postgresql://hacknect:hackn3ct_test@localhost:5432/hacknect_test_db
TEST_MONGODB_URI=mongodb://hacknect:hackn3ct_test@localhost:27017/hacknect_test

# ===== PRODUCTION OVERRIDES =====
# (Set these in production environment)

# NODE_ENV=production
